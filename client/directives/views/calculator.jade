		mutation-button(name="Clear", mutator="calculatorController.resetModel()")
		mutation-button(name="Sin", mutator="calculatorController.mutatorSin()")
		mutation-button(name="Cos", mutator="calculatorController.mutatorCos()")
		mutation-button(name="+/-", mutator="calculatorController.flipSign()")
